<Window x:Class="lab02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center">
            <Label Content="Iniciar sesión" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Usuario:"/>
            <TextBox x:Name="txtUsuario" Margin="0,0,0,10"/>

            <Label Content="Contraseña:"/>
            <PasswordBox x:Name="txtContrasena" Margin="0,0,0,20"/>

            <Button Content="Ingresar" Width="100" HorizontalAlignment="Center" Click="Button_Click_2"/>
        </StackPanel>


    </Grid>
</Window>
