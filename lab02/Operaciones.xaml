<Window x:Class="lab02.Operaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab02"
        mc:Ignorable="d"
        Title="Operaciones" Height="600" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Operaciones" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Tipo de Documento" FontSize="18" Margin="0,5"/>
            <Label Content="Número de Documento" FontSize="18" Margin="0,5"/>
            <Label Content="Placa" FontSize="18" Margin="0,5"/>
            <Label Content="Turno" FontSize="18" Margin="0,5"/>
            <Label Content="Nombre del Conductor" FontSize="18" Margin="0,5"/>
            <Label Content="Nombre del Cliente" FontSize="18" Margin="0,5"/>
            <Label Content="Fecha y Hora" FontSize="18" Margin="0,5"/>
            <Label Content="Peso de Ingreso" FontSize="18" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
